<div>
    <p class="movie-id">{{movie.id}}</p>
    <img src="{{movie.poster}}">
    <h1>{{movie.title}}</h1>
    <p>{{movie.plot}}</p>
    <p>{{movie.runtime}}</p>
</div>

{{#if loggedIn}}
<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="field">
      <p class="control">
        <textarea name="comment-body" class="textarea" placeholder="Add a comment..." ></textarea>
      </p>
    </div>
    <nav class="level">
      <div class="level-left">
        <div class="level-item">
          <button class="button is-info submit-comment" onclick="commentFormHandler('{{movie.id}}')">Submit</button>
        </div>
      </div>
    </nav>
  </div>
</article>
{{/if}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}