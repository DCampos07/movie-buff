<div class="card column is-12-mobile is-6-tablet is-6-desktop">
    {{!-- <p class="movie-id">{{movie.id}}</p> --}}
   <div class="card-content">
    <div class="card-image">
        <img src="{{movie.poster}}">
    </div>

    <div class="content">
        <h1 class="title is-1">{{movie.title}}</h1>
        <p>{{movie.plot}}</p>
        <p>Runtime: + {{movie.runtime}}</p>
        </span>
    </div>
    </div>

</div>


{{#if loggedIn}}
{{> comments comment=movie.comments}}
<article class="media">
    <div class="media-content">
        <div class="field">
            <p class="control">
                <textarea name="comment-body" class="textarea" placeholder="Add a comment..."></textarea>
            </p>
        </div>
        {{!-- <span class="rating">
            <span class="star">â˜…</span> --}}
        <nav class="level">
            <div class="level-left">
                <div class="level-item">
                    <button class="button is-info submit-comment"
                        onclick="commentFormHandler('{{movie.title}}')">Submit</button>
                </div>
            </div>
        </nav>
    </div>
</article>




{{/if}}

