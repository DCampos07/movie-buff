<div class="comments">
  {{#each comment}}
    <div class="card">
        <div class="card-body">
            <div class="text">
                {{dataValues.comment_text}}
            </div>
            <div class="meta">
                -{{dataValues.user}}, {{format_date created_at}}
            </div>
        </div>
    </div>
  {{/each}}
</div>